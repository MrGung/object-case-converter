{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "lib": ["ES2017", "DOM"],
    "module": "ES2015",
    "outDir": "dist",
    "declarationDir": "dist",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "**/__tests__",
    "dist"
  ]
}
